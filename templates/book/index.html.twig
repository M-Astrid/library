{% extends 'base.html.twig' %}

{% block title %}Your library{% endblock %}

{% block body %}
    <div class="book-list">
            <a class="btn btn-secondary new-book text-right" href="{{ path('book_new') }}">Add new book</a>
        <div class="text-center">
            <h1>Your library</h1>
        </br>

            <table class="table">
                <tbody>
                <tr class="table-top">
                    <th class="table-top">Title: </th>
                    <th>Year: </th>
                    <th>Author: </th>
                    <th></th>
                </tr>
                {% for book in books %}
                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.year }}</td>
                        <td>{{ book.author }}</td>
                        <td>
                            <a class="btn btn-light" href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

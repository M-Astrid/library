<div class="container">
    {{ form_start(form) }}

    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="form-group row">
        <div class="col-xs-10">
            {{ form_row(form.author, { 'label': 'Author: ', 'attr': {'class': 'form-control', 'id': 'example-text-input'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-10">
            {{ form_row(form.title, { 'label': 'Title: ', 'attr': {'class': 'form-control', 'id': 'example-text-input'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-10">
            {{ form_row(form.year, { 'label': 'Year: ', 'attr': {'class': 'form-control', 'id': 'example-text-input'}}) }}
        </div>
    </div>

    <button class="btn">{{ button_label|default('Save') }}</button>

    {{ form_end(form) }}
</div>